<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Manager</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0/css/all.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <style>
        body {
            background-image: url("/images/emp.PNG");
            /* Full height */
            height: 100%;
            /* Center and scale the image nicely */
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
</head>
<body>
        <a class="h1 text-dark" href="~/">
            Employee Manager
        </a>
    <hr />
    <div class="row">
        <div class="col-8 offset-2">
            @RenderBody()
        </div>
    </div>
            <script>
                $(document).ready(function () {
                    if (sessionStorage.hasOwnProperty("userName")) {
                        $("#userName").html("You are signed in as " + sessionStorage.getItem("userName"));
                    }
                    else {
                        $("#signoutForm").hide();
                    }

                    $("#signout").click(function () {
                        sessionStorage.removeItem("token");
                        sessionStorage.removeItem("userName");
                        window.location.href = "/EmployeeManager/SignIn";
                    });
                });
            </script>

            <h2 id="userName"></h2>
            <form id="signoutForm">
                <button id="signout" type="button" class="btn btn-primary">Sign Out</button>
            </form>
</body>
</html>


